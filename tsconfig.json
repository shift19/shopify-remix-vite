{
  "include": [
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ]
    },
    "types": [
      "node",
      "@shopify/app-bridge-types"
    ],
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "https://shopify.dev/admin-graphql-direct-proxy/2024-01",
        "tadaOutputLocation": "./app/graphql-env.d.ts"
      }
    ]
  }
}
